<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eyalpano.app.Driver.AddRide"
    android:onClick="onAddRideClick"
    android:background="@drawable/background_driver">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/AddRide_etxt_fromdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:hint="@string/from_date"
            android:gravity="center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AddRide_hourspinner"
            android:spinnerMode="dropdown"
            android:layout_weight="0.28"
            android:gravity="center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AddRide_wazespinner"
            android:spinnerMode="dropdown"
            android:layout_weight="0.34"
            android:gravity="center" />

        <Button
            android:layout_width="352dp"
            android:layout_height="58dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#005AA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Add ride"
            android:id="@+id/AddRide_addRide"
            android:gravity="center"
            android:onClick="onClick" />

        <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#005AA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Close"
            android:id="@+id/AddRide_close"
            android:gravity="center"
            android:onClick="onClick" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.lahphim.mamoon.EditRide"
    android:background="@drawable/background_driver">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <EditText
            android:id="@+id/EditRide_etxt_fromdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:hint="@string/from_date" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditRide_hourspinner"
            android:spinnerMode="dropdown"
            android:gravity="center_vertical"
            android:layout_weight="0.28" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditRide_wazespinner"
            android:spinnerMode="dropdown"
            android:gravity="center_vertical"
            android:layout_weight="0.34" />

        <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#005AA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:id="@+id/EditRide_save"
            android:onClick="onSaveRideClick" />

        <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#005AA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Del"
            android:id="@+id/EditRide_delete"
            android:onClick="onDeleteRideClick" />

        <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#005AA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Close"
            android:id="@+id/EditRide_close"
            android:onClick="onCancelClick" />
    </LinearLayout>
</RelativeLayout>
